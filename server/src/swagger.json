{
  "openapi": "3.0.0",
  "info": {
    "title": "API HELP-DESK üçÄ",
    "description": "Documenta√ß√£o da API do helpDesk",
    "version": "0.0.1"
  },

  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "API URL"
    }
  ],

  "paths": {
    "/administrador/novoadministrador": {
      "post": {
        "summary": "novo admin",
        "description": "cadastrando um novo admin",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Administrador"
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Unauthorized"
          },
          "400": {
            "description": "invalid request"
          },
          "409": {
            "description": "already exists"
          },
          "201": {
            "description": "created",
            "content ": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "ok": "boolean",
                    "message": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/administrador/loginadministrador": {
      "post": {
        "summary": "login admin",
        "description": "login admin",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginAdmin"
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "invalid request"
          },
          "404": {
            "description": "Invalid user"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "type": "object",
                    "properties": {
                      "Token": {
                        "example": "jwt"
                      },
                      "ok": {
                        "example": "true"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }, 
    
  },
  "components": {
    "schemas": {
      "Administrador": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string",
            "example": "Kaic"
          },
          "cargo": {
            "type": "string",
            "example": "Estagiario"
          },
          "password": {
            "type": "string",
            "example": "minhasenha"
          },
          "email": {
            "type": "string",
            "example": "kaiquemendesilva82@gmail.com"
          },
          "tel": {
            "type": "number",
            "example": "81114922"
          },
          "active": {
            "type": "number",
            "example": "1"
          }
        }
      },
      "LoginAdmin": {
        "type": "object",
        "properties": {
          "email": {
            "email": "string",
            "example": "kaico@gmail.com"
          },
          "password": {
            "email": "string",
            "example": "senha"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormart": "JWT"
      }
    }
  }
}
